@model IEnumerable<HospitalManagementSystem.Models.ActePose>


<table id="data-table1" class="table table-striped table-bordered nowrap" width="100%">
    <tr>
        <th>
            Patient
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Paiement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motif)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>

        <th>
           Examen
        </th>
        <th>
           Medécin
        </th>
       
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fiche.Patient.NomComplet)
        </td>
        <td>
            @{
                if (item.Paiement == 1)
                {
                    <b style="color:green">Payé</b>
                }
                else
                {
                    <b style="color:red">Non Payé</b>
                }
            }
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motif)
        </td>

        <td>
            @{ 
                if (item.Status == 0)
                {
                    <b>Non réalisé</b>
                }
                else
                {
                    <b>Réalisé</b>
                }
            }
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.LibelleActe.Libelle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personnel.Nom)
        </td>
        
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            <a href="#" class="btn mb-1 btn-primary btn-xm" onclick="ModalConfirFraisExamen(@item.Id)"><i>Valider</i></a>
        </td>
    </tr>
}

</table>
