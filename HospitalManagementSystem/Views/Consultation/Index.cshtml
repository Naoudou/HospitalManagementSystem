@* Modal RDV *@
<div class="container my-4">

    <!-- Modal -->
    <div class="modal fade right" id="ModalRdv" tabindex="-1" role="dialog" aria-labelledby="exampleModalPreviewLabel" aria-hidden="true">
        <div class=" modal-dialog momodel modal-fluid" role="document">
            <div class="modal-content-full-width modal-content ">
                <div class=" modal-header-full-width   modal-header text-center">
                    <h5 class="modal-title w-100">Caler un rendez-vous</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span style="font-size: 1.3em;" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @{ Html.RenderAction("CreateRdvPartiel", "RendezVous");}

                </div>
                <div class="modal-footer-full-width  modal-footer">
                    @*<button type="button" class="btn btn-danger btn-md btn-rounded" data-dismiss="modal">Close</button>
                    <button type="button" id="btnSubmitRdv" class="btn btn-primary btn-md btn-rounded">Enregistrer</button>*@
                </div>
            </div>
        </div>
    </div>

</div>

@* Modal de prescription de médication *@

<div class="container my-4">



    <!-- Modal -->
    <div class="modal fade right" id="PresMedocApresCons" tabindex="-1" role="dialog" aria-labelledby="exampleModalPreviewLabel" aria-hidden="true">
        <div class=" modal-dialog momodel modal-fluid" role="document">
            <div class="modal-content-full-width modal-content ">
                <div class=" modal-header-full-width   modal-header text-center">
                    <h5 class="modal-title w-100" >Prescription d'un médicament après consultation</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span style="font-size: 1.3em;" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                   
                    @{ Html.RenderAction("Part_Create_prescription", "Prescription");}

                </div>
                <div class="modal-footer-full-width  modal-footer">
                    <button type="button" class="btn btn-danger btn-md btn-rounded" data-dismiss="modal">Close</button>
                    <button type="button" id="btnSummitMedicamentApresConsult" class="btn btn-primary btn-md btn-rounded">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

</div>


@* Modal de creation d'une examen *@

<div class="container my-4">



    <!-- Modal -->
    <div class="modal fade right" id="prescrirExamen" tabindex="-1" role="dialog" aria-labelledby="exampleModalPreviewLabel" aria-hidden="true">
        <div class=" modal-dialog momodel modal-fluid" role="document">
            <div class="modal-content-full-width modal-content ">
                <div class=" modal-header-full-width   modal-header text-center">
                    <h5 class="modal-title w-100" id="exampleModalPreviewLabel">Prescription d'un examen</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span style="font-size: 1.3em;" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @{ Html.RenderAction("Part_Create_Examen", "Consultation");}

                </div>
                <div class="modal-footer-full-width  modal-footer">
                    <button type="button" class="btn btn-danger btn-md btn-rounded" data-dismiss="modal">Annuler</button>
                    <button type="button" id="btnSummitExam" class="btn btn-primary btn-md btn-rounded">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

</div>


@* Modal de visualisation des resultats de la consultation *@

<div class="container my-4">



    <!-- Modal -->
    <div class="modal fade right" id="ConsResultatExamen" tabindex="-1" role="dialog" aria-labelledby="exampleModalPreviewLabel" aria-hidden="true">
        <div class=" modal-dialog momodel modal-fluid" role="document">
            <div class="modal-content-full-width modal-content ">
                <div class=" modal-header-full-width   modal-header text-center">
                    <h5 class="modal-title w-100" id="exampleModalPreviewLabel">Les resultats de la consultation </h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                        <span style="font-size: 1.3em;" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <object class="PDFdoc" width="100%" height="500px" type="application/pdf" data="~/Content/Documents/Examen/Resultat_examen_medical.pdf"></object>
                    @*@{ Html.RenderAction("Part_Create_Examen", "Consultation");}*@

                </div>
                <div class="modal-footer-full-width  modal-footer">
                    <button type="button" class="btn btn-danger btn-md btn-rounded" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-md btn-rounded">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

</div>




