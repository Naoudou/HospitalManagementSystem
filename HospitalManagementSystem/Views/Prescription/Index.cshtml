@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Possologie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActePose.CodeActeMedicale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medicament.NomCommercial)
        </td>
