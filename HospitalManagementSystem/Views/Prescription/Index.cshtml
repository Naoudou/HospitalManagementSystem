@model IEnumerable<HospitalManagementSystem.Models.Prescription>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_medecin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Possologie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActePose.CodeActeMedicale)
