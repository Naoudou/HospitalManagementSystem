@model IEnumerable<HospitalManagementSystem.Models.VenteMedicament>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Pharmacie.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicament.NomCommercial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnel.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
  

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medicament.NomCommercial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Personnel.Nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
