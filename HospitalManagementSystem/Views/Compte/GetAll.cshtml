@model IEnumerable<HospitalManagementSystem.Models.Compte>


    <table id="data-table" class="table table-striped table-bordered nowrap" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Personnel.Nom)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Statut)
                </th>
                <th>
                    Role
                </th>

                <th>Action</th>
            </tr>
        </thead>
       

        @foreach (var item in Model)
        {
            if (item.Statut == 0)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Personnel.NomComplet)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                   
                    <td style="color:red">
                        Désactivé
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Configuration.Libelle)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Activer", "ActiverDesactiver", new { id = item.Id })
                        <a href="#" class="btn mb-1 btn-primary btn-xm" onclick="confirmeactiver(@item.Id)"><i>Activer</i></a>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Personnel.NomComplet)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                  
                    <td style="color:green">
                        Activé
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Configuration.Libelle)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @*@Html.ActionLink("Désactiver", "ActiverDesactiver", new { id = item.Id })*@
                        <a href="#" class="btn mb-1 btn-primary btn-xm" onclick="confirmedesactiver(@item.Id)"><i>Désactiver</i></a>
                    </td>
                </tr>
            }

        }

    </table>


