            $("#idmodalparametre").modal("show");


        }

    //affiche une vue dans un modal
    var showInPopup = function (url, title) {
        $.ajax({
            type: "GET",
            url: url,
            success: function (res) {
                $("#form-modal .modal-body").html(res);
                $("#form-modal .modal-title").html(title);
                $("#form-modal").modal("show");

                GetList();

            }
        })
    };

</script>